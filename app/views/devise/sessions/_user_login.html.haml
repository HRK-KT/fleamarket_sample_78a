.login-input-items-field 
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .login-input-items-field__item
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'input-box'
    
    .login-input-items-field__item
      = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: 'input-box'
    
    - if devise_mapping.rememberable?
      .login-input-items-field__item
        = f.check_box :remember_me
        = f.label :remember_me, 'パスワードを保存する'

    .submit-btn
      = f.submit "ログイン", class:'submit-btn__login'